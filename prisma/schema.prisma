// Prisma Schema for Amilou - Quran Learning Tracker

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Authentication & Users
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  emailVerified DateTime?
  role          String    @default("USER")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts                Account[]
  sessions                Session[]
  groupMembers            GroupMember[]
  progressEntries         Progress[]
  dailyAttendance         DailyAttendance[]
  evaluationsGiven        Evaluation[]             @relation("EvaluatorRelation")
  evaluationsReceived     Evaluation[]             @relation("EvaluatedRelation")
  representedUsers        UserRepresentative[]     @relation("RepresentativeRelation")
  representatives         UserRepresentative[]     @relation("RepresentedRelation")
  sessionAttendance       SessionAttendance[]
  objectives              UserObjective[]
  programSettings         UserProgramSettings[]
  dailyLogs               DailyLog[]
  dailyProgramCompletions DailyProgramCompletion[]
  weeklyObjectives        WeeklyObjective[]
  surahMasteries          SurahMastery[]
  surahRecitations        SurahRecitation[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserRepresentative {
  id               String   @id @default(cuid())
  representativeId String
  representedId    String
  createdAt        DateTime @default(now())

  representative User @relation("RepresentativeRelation", fields: [representativeId], references: [id], onDelete: Cascade)
  represented    User @relation("RepresentedRelation", fields: [representedId], references: [id], onDelete: Cascade)

  @@unique([representativeId, representedId])
}

// ============================================
// Groups
// ============================================

model Group {
  id               String   @id @default(cuid())
  name             String
  description      String?
  sessionFrequency String   @default("WEEKLY")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  members  GroupMember[]
  sessions GroupSession[]
}

model GroupMember {
  id       String   @id @default(cuid())
  userId   String
  groupId  String
  role     String   @default("MEMBER")
  joinedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

// ============================================
// Programs & Objectives
// ============================================

model Program {
  id          String   @id @default(cuid())
  code        String   @unique
  nameAr      String
  nameFr      String
  nameEn      String
  description String?
  createdAt   DateTime @default(now())

  progressEntries  Progress[]
  objectives       UserObjective[]
  userSettings     UserProgramSettings[]
  dailyLogs        DailyLog[]
  dailyCompletions DailyProgramCompletion[]
  weeklyObjectives WeeklyObjective[]
}

model UserObjective {
  id           String   @id @default(cuid())
  userId       String
  programId    String
  dailyTarget  Int
  targetMonths Int?
  totalTarget  Int?
  startDate    DateTime @default(now())
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
}

// ============================================
// Progress Tracking
// ============================================

model Progress {
  id          String   @id @default(cuid())
  userId      String
  programId   String
  date        DateTime
  surahNumber Int
  verseStart  Int
  verseEnd    Int
  repetitions Int?
  comment     String?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  surah   Surah   @relation(fields: [surahNumber], references: [number])

  evaluations Evaluation[]

  @@index([userId, programId, date])
}

// ============================================
// Daily Attendance
// ============================================

model DailyAttendance {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  sunday    Int      @default(0)
  monday    Int      @default(0)
  tuesday   Int      @default(0)
  wednesday Int      @default(0)
  thursday  Int      @default(0)
  friday    Int      @default(0)
  saturday  Int      @default(0)
  comment   String?
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

// ============================================
// Evaluations
// ============================================

model Evaluation {
  id          String   @id @default(cuid())
  progressId  String
  evaluatorId String
  evaluatedId String
  surahNumber Int
  verseNumber Int
  comment     String
  rating      Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  progress  Progress @relation(fields: [progressId], references: [id], onDelete: Cascade)
  evaluator User     @relation("EvaluatorRelation", fields: [evaluatorId], references: [id], onDelete: Cascade)
  evaluated User     @relation("EvaluatedRelation", fields: [evaluatedId], references: [id], onDelete: Cascade)
  surah     Surah    @relation(fields: [surahNumber], references: [number])
}

// ============================================
// Group Sessions & Attendance
// ============================================

model GroupSession {
  id         String   @id @default(cuid())
  groupId    String
  date       DateTime
  weekNumber Int?     // Numéro de semaine (S1, S2, S12...)
  notes      String?
  createdBy  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  group       Group               @relation(fields: [groupId], references: [id], onDelete: Cascade)
  attendance  SessionAttendance[]
  recitations SurahRecitation[]
}

model SessionAttendance {
  id        String  @id @default(cuid())
  sessionId String
  userId    String
  present   Boolean @default(false)
  excused   Boolean @default(false)
  note      String?

  session GroupSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([sessionId, userId])
}

// ============================================
// Quran Reference Data
// ============================================

model Surah {
  number          Int    @id
  nameAr          String
  nameFr          String
  nameEn          String
  totalVerses     Int
  revelationOrder Int
  revelationType  String

  verses      Verse[]
  progress    Progress[]
  evaluations Evaluation[]
  masteries   SurahMastery[]
  recitations SurahRecitation[]
}

model Verse {
  id          String @id @default(cuid())
  surahNumber Int
  verseNumber Int
  page        Int
  juz         Int?
  hizb        Float?

  surah Surah @relation(fields: [surahNumber], references: [number])

  @@unique([surahNumber, verseNumber])
  @@index([page])
}

// ============================================
// User Program Settings (Objectifs par programme)
// ============================================

model UserProgramSettings {
  id        String    @id @default(cuid())
  userId    String
  programId String
  quantity  Float     @default(1) // 0.25, 0.33, 0.5, 0.75, 1, 2, etc.
  unit      String    @default("PAGE") // PAGE, QUART, DEMI_HIZB, HIZB, JUZ
  period    String    @default("DAY") // DAY, WEEK, MONTH, YEAR
  isActive  Boolean   @default(true)
  startDate DateTime  @default(now())
  endDate   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isActive])
}

// ============================================
// Daily Log (Suivi quotidien par programme)
// ============================================

model DailyLog {
  id        String   @id @default(cuid())
  userId    String
  programId String
  date      DateTime
  quantity  Float // Quantité réalisée
  unit      String // PAGE, QUART, DEMI_HIZB, HIZB, JUZ
  comment   String?
  createdBy String // ID de celui qui a saisi
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@unique([userId, programId, date])
  @@index([userId, date])
  @@index([userId, programId, date])
}

// ============================================
// Daily Program Completion (New Attendance System)
// ============================================

model DailyProgramCompletion {
  id        String   @id @default(cuid())
  userId    String
  programId String
  date      DateTime
  completed Boolean  @default(false)
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@unique([userId, programId, date])
  @@index([userId, date])
}

// ============================================
// Weekly Objectives (Tafsir, Hadith, etc.)
// ============================================

model WeeklyObjective {
  id        String   @id @default(cuid())
  userId    String
  name      String // "Tafsir", "Hadith", etc.
  programId String? // Lien optionnel vers Program (pour Tafsir)
  isCustom  Boolean  @default(false)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User                        @relation(fields: [userId], references: [id], onDelete: Cascade)
  program     Program?                    @relation(fields: [programId], references: [id])
  completions WeeklyObjectiveCompletion[]

  @@index([userId, isActive])
}

model WeeklyObjectiveCompletion {
  id                String   @id @default(cuid())
  weeklyObjectiveId String
  weekStartDate     DateTime
  completed         Boolean  @default(false)
  createdBy         String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  weeklyObjective WeeklyObjective @relation(fields: [weeklyObjectiveId], references: [id], onDelete: Cascade)

  @@unique([weeklyObjectiveId, weekStartDate])
}

// ============================================
// Surah Mastery (État actuel par élève/sourate)
// ============================================

model SurahMastery {
  id            String    @id @default(cuid())
  userId        String
  surahNumber   Int
  status        String    // Code statut (X, AM, 50%, 51%, 90%, V, S, etc.)
  validatedWeek Int?      // Numéro de semaine de validation (ex: 12 pour V12)
  validatedAt   DateTime?
  verseStart    Int?      // Si progression partielle
  verseEnd      Int?      // Si progression partielle
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  surah Surah @relation(fields: [surahNumber], references: [number])

  @@unique([userId, surahNumber])
  @@index([userId])
  @@index([userId, status])
}

// ============================================
// Surah Recitation (Historique des récitations par séance)
// ============================================

model SurahRecitation {
  id          String   @id @default(cuid())
  sessionId   String
  userId      String
  surahNumber Int
  type        String   // MEMORIZATION | REVISION
  verseStart  Int
  verseEnd    Int
  status      String   // Code statut (X, AM, 50%, 51%, 90%, V, S, etc.)
  comment     String?
  createdBy   String
  createdAt   DateTime @default(now())

  session GroupSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  surah   Surah        @relation(fields: [surahNumber], references: [number])

  @@index([sessionId])
  @@index([userId])
  @@index([userId, surahNumber])
}

// ============================================
// Recitation Status Codes (Codes de statut personnalisables)
// ============================================

model RecitationStatus {
  id          String   @id @default(cuid())
  code        String   @unique // X, AM, 50%, 51%, 90%, V, S, etc.
  label       String   // Libellé court
  tooltip     String   // Description tooltip
  color       String?  // Couleur hex optionnelle (ex: #10B981)
  sortOrder   Int      @default(0) // Ordre d'affichage
  isDefault   Boolean  @default(false) // Statuts système non supprimables
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sortOrder])
}
