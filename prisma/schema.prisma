generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model CompletionCycle {
  id             String   @id
  userId         String
  type           String
  completedAt    DateTime
  daysToComplete Int?
  notes          String?
  createdAt      DateTime @default(now())
  hizbCount      Int?
  User           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, completedAt])
  @@index([userId, type])
}

model DailyAttendance {
  id        String   @id
  userId    String
  date      DateTime
  sunday    Int      @default(0)
  monday    Int      @default(0)
  tuesday   Int      @default(0)
  wednesday Int      @default(0)
  thursday  Int      @default(0)
  friday    Int      @default(0)
  saturday  Int      @default(0)
  comment   String?
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model DailyLog {
  id        String   @id
  userId    String
  programId String
  date      DateTime
  quantity  Float
  unit      String
  comment   String?
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Program   Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, programId, date])
  @@index([userId, date])
  @@index([userId, programId, date])
}

model DailyProgramCompletion {
  id        String   @id
  userId    String
  programId String
  date      DateTime
  completed Boolean  @default(false)
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Program   Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, programId, date])
  @@index([userId, date])
}

model Evaluation {
  id                                String   @id
  progressId                        String
  evaluatorId                       String
  evaluatedId                       String
  surahNumber                       Int
  verseNumber                       Int
  comment                           String
  rating                            Int?
  createdAt                         DateTime @default(now())
  updatedAt                         DateTime
  User_Evaluation_evaluatedIdToUser User     @relation("Evaluation_evaluatedIdToUser", fields: [evaluatedId], references: [id], onDelete: Cascade)
  User_Evaluation_evaluatorIdToUser User     @relation("Evaluation_evaluatorIdToUser", fields: [evaluatorId], references: [id], onDelete: Cascade)
  Progress                          Progress @relation(fields: [progressId], references: [id], onDelete: Cascade)
  Surah                             Surah    @relation(fields: [surahNumber], references: [number])
}

model Group {
  id               String         @id
  name             String
  description      String?
  sessionFrequency String         @default("WEEKLY")
  createdAt        DateTime       @default(now())
  updatedAt        DateTime
  GroupMember      GroupMember[]
  GroupSession     GroupSession[]
}

model GroupMember {
  id       String   @id
  userId   String
  groupId  String
  role     String   @default("MEMBER")
  joinedAt DateTime @default(now())
  Group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  User     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model GroupSession {
  id                String              @id
  groupId           String
  date              DateTime
  notes             String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime
  createdBy         String?
  weekNumber        Int?
  Group             Group               @relation(fields: [groupId], references: [id], onDelete: Cascade)
  SessionAttendance SessionAttendance[]
  SurahRecitation   SurahRecitation[]
}

model Program {
  id                     String                   @id
  code                   String                   @unique
  nameAr                 String
  nameFr                 String
  nameEn                 String
  description            String?
  createdAt              DateTime                 @default(now())
  DailyLog               DailyLog[]
  DailyProgramCompletion DailyProgramCompletion[]
  Progress               Progress[]
  UserObjective          UserObjective[]
  UserProgramSettings    UserProgramSettings[]
  WeeklyObjective        WeeklyObjective[]
}

model Progress {
  id          String       @id
  userId      String
  programId   String
  date        DateTime
  surahNumber Int
  verseStart  Int
  verseEnd    Int
  repetitions Int?
  comment     String?
  createdBy   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime
  Evaluation  Evaluation[]
  Program     Program      @relation(fields: [programId], references: [id], onDelete: Cascade)
  Surah       Surah        @relation(fields: [surahNumber], references: [number])
  User        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, programId, date])
}

model RecitationStatus {
  id        String   @id
  code      String   @unique
  label     String
  tooltip   String
  color     String?
  sortOrder Int      @default(0)
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([sortOrder])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SessionAttendance {
  id           String       @id
  sessionId    String
  userId       String
  present      Boolean      @default(false)
  excused      Boolean      @default(false)
  note         String?
  GroupSession GroupSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  User         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([sessionId, userId])
}

model Surah {
  number          Int               @id
  nameAr          String
  nameFr          String
  nameEn          String
  totalVerses     Int
  revelationOrder Int
  revelationType  String
  Evaluation      Evaluation[]
  Progress        Progress[]
  SurahMastery    SurahMastery[]
  SurahRecitation SurahRecitation[]
  Verse           Verse[]
}

model SurahMastery {
  id            String    @id
  userId        String
  surahNumber   Int
  status        String
  validatedWeek Int?
  validatedAt   DateTime?
  verseStart    Int?
  verseEnd      Int?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  Surah         Surah     @relation(fields: [surahNumber], references: [number])
  User          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, surahNumber])
  @@index([userId])
  @@index([userId, status])
}

model SurahRecitation {
  id           String       @id
  sessionId    String
  userId       String
  surahNumber  Int
  type         String
  verseStart   Int
  verseEnd     Int
  status       String
  comment      String?
  createdBy    String
  createdAt    DateTime     @default(now())
  GroupSession GroupSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  Surah        Surah        @relation(fields: [surahNumber], references: [number])
  User         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([userId])
  @@index([userId, surahNumber])
}

model User {
  id                                                           String                   @id
  email                                                        String                   @unique
  name                                                         String?
  password                                                     String?
  image                                                        String?
  emailVerified                                                DateTime?
  role                                                         String                   @default("USER")
  createdAt                                                    DateTime                 @default(now())
  updatedAt                                                    DateTime
  privateAttendance                                            Boolean                  @default(false)
  privateEvaluations                                           Boolean                  @default(false)
  privateProgress                                              Boolean                  @default(false)
  privateStats                                                 Boolean                  @default(false)
  memorizationDirection                                        String?
  memorizationStartSurah                                       Int?
  memorizationStartVerse                                       Int?
  Account                                                      Account[]
  CompletionCycle                                              CompletionCycle[]
  DailyAttendance                                              DailyAttendance[]
  DailyLog                                                     DailyLog[]
  DailyProgramCompletion                                       DailyProgramCompletion[]
  Evaluation_Evaluation_evaluatedIdToUser                      Evaluation[]             @relation("Evaluation_evaluatedIdToUser")
  Evaluation_Evaluation_evaluatorIdToUser                      Evaluation[]             @relation("Evaluation_evaluatorIdToUser")
  GroupMember                                                  GroupMember[]
  Progress                                                     Progress[]
  Session                                                      Session[]
  SessionAttendance                                            SessionAttendance[]
  SurahMastery                                                 SurahMastery[]
  SurahRecitation                                              SurahRecitation[]
  UserObjective                                                UserObjective[]
  UserProgramSettings                                          UserProgramSettings[]
  UserRepresentative_UserRepresentative_representativeIdToUser UserRepresentative[]     @relation("UserRepresentative_representativeIdToUser")
  UserRepresentative_UserRepresentative_representedIdToUser    UserRepresentative[]     @relation("UserRepresentative_representedIdToUser")
  WeeklyObjective                                              WeeklyObjective[]
}

model UserObjective {
  id           String   @id
  userId       String
  programId    String
  dailyTarget  Int
  targetMonths Int?
  totalTarget  Int?
  startDate    DateTime @default(now())
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  Program      Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserProgramSettings {
  id           String    @id
  userId       String
  programId    String
  quantity     Float     @default(1)
  unit         String    @default("PAGE")
  period       String    @default("DAY")
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  startDate    DateTime  @default(now())
  endDate      DateTime?
  snapshotDate DateTime?
  wasModified  Boolean   @default(false)
  Program      Program   @relation(fields: [programId], references: [id], onDelete: Cascade)
  User         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isActive])
  @@index([userId, snapshotDate])
}

model UserRepresentative {
  id                                             String   @id
  representativeId                               String
  representedId                                  String
  createdAt                                      DateTime @default(now())
  User_UserRepresentative_representativeIdToUser User     @relation("UserRepresentative_representativeIdToUser", fields: [representativeId], references: [id], onDelete: Cascade)
  User_UserRepresentative_representedIdToUser    User     @relation("UserRepresentative_representedIdToUser", fields: [representedId], references: [id], onDelete: Cascade)

  @@unique([representativeId, representedId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Verse {
  id          String @id
  surahNumber Int
  verseNumber Int
  page        Int
  juz         Int?
  hizb        Float?
  Surah       Surah  @relation(fields: [surahNumber], references: [number])

  @@unique([surahNumber, verseNumber])
  @@index([page])
}

model WeeklyObjective {
  id                        String                      @id
  userId                    String
  name                      String
  programId                 String?
  isCustom                  Boolean                     @default(false)
  isActive                  Boolean                     @default(true)
  createdAt                 DateTime                    @default(now())
  updatedAt                 DateTime
  Program                   Program?                    @relation(fields: [programId], references: [id])
  User                      User                        @relation(fields: [userId], references: [id], onDelete: Cascade)
  WeeklyObjectiveCompletion WeeklyObjectiveCompletion[]

  @@index([userId, isActive])
}

model WeeklyObjectiveCompletion {
  id                String          @id
  weeklyObjectiveId String
  weekStartDate     DateTime
  completed         Boolean         @default(false)
  createdBy         String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime
  WeeklyObjective   WeeklyObjective @relation(fields: [weeklyObjectiveId], references: [id], onDelete: Cascade)

  @@unique([weeklyObjectiveId, weekStartDate])
}
